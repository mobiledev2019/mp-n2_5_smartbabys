<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crossword_bkg"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.ptit.android.kidslearning.Game.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="70sp"
            android:layout_height="60sp"
            android:background="@drawable/khung"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/pomegranate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_title_question"
            android:layout_width="0dp"
            android:layout_height="60sp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_bkg"
            android:gravity="center"
            android:text="@string/question_word"
            android:textColor="@color/pomegranate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/indexQues"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgRadio"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_gravity="end"
        android:src="@drawable/ic_radio_waves" />

    <ImageView
        android:id="@+id/img_question"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:src="@drawable/apple_qua_tao" />

    <LinearLayout
        android:id="@+id/layout_text"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/layout_btn2"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:gravity="center"
        android:orientation="horizontal" />
</LinearLayout>
